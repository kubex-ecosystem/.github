{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rewriteRelativeImportExtensions": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".notes/tsconfig.json",
    "next.config.js",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "out",
    "coverage",
    "public",
    "next.config.js",
    "tsconfig.json",
    "tsconfig.node.json"
  ]
}
