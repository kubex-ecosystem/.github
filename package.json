    "@types/tough-cookie": "^4.0.5",
    "@types/trusted-types": "^2.0.7",
    "@types/ws": "^8.18.1",
    "@types/yargs": "^17.0.33",
    "@types/yargs-parser": "^21.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "lint-staged": "^16.1.2",
    "serve": "^14.0.1"
