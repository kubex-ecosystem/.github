  "keywords": [
    "nextjs",
    "tailwindcss",
    "portfolio",
    "react",
    "web-development",
    "frontend",
    "web-design",
    "responsive",
    "modern",
    "minimalist",
    "developer",
    "personal-website",
    "showcase",
    "blog",
    "projects",
    "contact",
    "email",
    "social-media",
    "github",
    "linkedin",
    "twitter",
    "instagram",
    "web-portfolio"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "resolutions": {
    "next": "15.3.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": true,
    "tabWidth": 2,
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "useTabs": false,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "jsxBracketSameLine": false,
    "htmlWhitespaceSensitivity": "css",
    "proseWrap": "preserve",
    "embeddedLanguageFormatting": "auto",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals",
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/no-unescaped-entities": "off",
      "no-unused-vars": "warn",
      "no-console": "warn",
      "no-debugger": "warn",
      "react/jsx-key": "warn",
      "react/jsx-no-undef": "error",
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      "react/no-unknown-property": "error",
      "react/no-deprecated": "warn",
      "react/prop-types": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "build",
    "dist",
    "out",
    "coverage",
    "public",
    "next.config.js",
    "postcss.config.js",
    "tailwind.config.js",
    "babel.config.js",
    "jest.config.js",
    "cypress.config.js",
    "cypress",
    "scripts",
    "tests",
    "docs"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/dist/",
      "/out/",
      "/coverage/",
      "/public/",
      "/next.config.js",
      "/postcss.config.js",
      "/tailwind.config.js",
      "/babel.config.js",
      "/jest.config.js",
      "/cypress.config.js",
      "/cypress/",
      "/scripts/",
      "/tests/",
      "/docs/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "text",
      "lcov",
      "clover"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/dist/",
      "/out/",
      "/public/",
      "/next.config.js",
      "/postcss.config.js",
      "/tailwind.config.js",
      "/babel.config.js",
      "/jest.config.js",
      "/cypress.config.js",
      "/cypress/",
      "/scripts/",
      "/tests/",
      "/docs/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|webp|svg)$": "<root_dir>/__mocks__/fileMock.js",
      "\\.(mp4|webm|ogg)$": "<root_dir>/__mocks__/fileMock.js",
      "\\.(woff|woff2|eot|ttf|otf|svg)$": "<root_dir>/__mocks__/fileMock.js"
    }
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
